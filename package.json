{
  "name": "fullstackapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "api": "nodemon bin/www",
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run api\" \"npm run client\"",
    "start": "node bin/www",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "build-all": "npm install && cd client && npm install --only=dev && npm install && npm run build",
    "start-all": "concurrently \"npm run api\" \"npm run client\""
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bson-objectid": "^1.3.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.6"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
